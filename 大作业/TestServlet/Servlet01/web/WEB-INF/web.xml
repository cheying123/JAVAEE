    <servlet>
        <servlet-name>AddClassNotificationServlet</servlet-name>
        <servlet-class>AddClassNotificationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ToShowAdminClass</servlet-name>
        <servlet-class>ToShowAdminClass</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>DeleteNotificationServlet</servlet-name>
        <servlet-class>DeleteClassNotificationServlet</servlet-class>
    </servlet>

    <servlet>
