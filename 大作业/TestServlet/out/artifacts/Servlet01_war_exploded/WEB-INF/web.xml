<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Register</servlet-name>
<!--两个servlet-name名字要相同-->
        <servlet-class>Register</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>login</servlet-name>
        <!--两个servlet-name名字要相同（找对应）-->
        <servlet-class>Login</servlet-class>
        <!--与新建的Severlet类或者html文件对应名字对应-->
    </servlet>

    <servlet>
        <servlet-name>AuditTeacherServlet</servlet-name>
        <servlet-class>AuditTeacherServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateClassServlet</servlet-name>
        <servlet-class>CreateClassServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>JoinClassServlet</servlet-name>
        <servlet-class>JoinClassServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ApproveJoinRequestServlet</servlet-name>
        <servlet-class>ApproveJoinRequestServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddClassNotificationServlet</servlet-name>
        <servlet-class>AddClassNotificationServlet</servlet-class>
    </servlet>



    <servlet>
        <servlet-name>DeleteNotificationServlet</servlet-name>
        <servlet-class>DeleteClassNotificationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddAdminNotificationServlet</servlet-name>
        <servlet-class>AddAdminNotificationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteAdminNotificationServlet</servlet-name>
        <servlet-class>DeleteAdminNotificationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ParentJoinClassServlet</servlet-name>
        <servlet-class>ParentJoinClassServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SendMessageServlet</servlet-name>
        <servlet-class>SendMessageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SendTeacherMessageServlet</servlet-name>
        <servlet-class>SendTeacherMessageServlet</servlet-class>
    </servlet>













    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
<!--        从url-pattern 对应的servlet-name 找到 servlet-class对应的servlet-name ，
            再从servlet-class中的名字找到对应的类-->
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AuditTeacherServlet</servlet-name>
        <url-pattern>/AuditTeacherServlet</url-pattern>

    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreateClassServlet</servlet-name>
        <url-pattern>/CreateClassServlet</url-pattern>

    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>JoinClassServlet</servlet-name>
        <url-pattern>/JoinClassServlet</url-pattern>

    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ApproveJoinRequestServlet</servlet-name>
        <url-pattern>/ApproveJoinRequestServlet</url-pattern>

    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddClassNotificationServlet</servlet-name>
        <url-pattern>/AddClassNotificationServlet</url-pattern>

    </servlet-mapping>



    <servlet-mapping>
        <servlet-name>DeleteNotificationServlet</servlet-name>
        <url-pattern>/DeleteNotificationServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddAdminNotificationServlet</servlet-name>
        <url-pattern>/AddAdminNotificationServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteAdminNotificationServlet</servlet-name>
        <url-pattern>/DeleteAdminNotificationServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ParentJoinClassServlet</servlet-name>
        <url-pattern>/ParentJoinClassServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SendMessageServlet</servlet-name>
        <url-pattern>/SendMessageServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SendTeacherMessageServlet</servlet-name>
        <url-pattern>/SendTeacherMessageServlet</url-pattern>
    </servlet-mapping>







</web-app>
